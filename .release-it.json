{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "ci": false,
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "_NO_TOKEN_USE_WEB_MODE_"
  },
  "hooks": {
    "before:init": ["npm run lint", "npm test"],
    "after:bump": "npm run build",
    "after:git:release": "echo 代码已推送到远程，准备创建 Release 页面...",
    "after:release": "echo 恭喜！${name} v${version} 已成功发布到 ${repo.repository}！"
  },
  "npm": {
    "publish": false
  }
}
